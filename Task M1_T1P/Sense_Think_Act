void setup()
{
  Serial.begin(9600);
  pinMode(12, OUTPUT);
  pinMode(8, INPUT);
  pinMode(11, OUTPUT);
}

void loop()
{
  
  if(!digitalRead(8)){
    digitalWrite(11, LOW);
    delay(250);
    digitalWrite(11, HIGH);
    delay(250);
    digitalWrite(11, LOW);
    delay(20);
    // digitalWrite(12, LOW);
  }
  else {
    digitalWrite(12, LOW);
    delay(250);
    digitalWrite(12, HIGH);
    delay(250);
    digitalWrite(12, LOW);
    delay(20);
    // digitalWrite(11, LOW);
  }
}
