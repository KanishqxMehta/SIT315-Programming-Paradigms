void setup()
{
  pinMode(12, OUTPUT);
  pinMode(8, INPUT);
  pinMode(11, OUTPUT);
}

void loop()
{
  
  if(digitalRead(8)){
    digitalWrite(11, HIGH);
    delay(250);
    digitalWrite(11, LOW);
    delay(250);
    digitalWrite(11, HIGH);
    
    digitalWrite(12, LOW);
  }
  else {
    digitalWrite(11, LOW);
    digitalWrite(12, HIGH);
    delay(250);
    digitalWrite(12, LOW);
    delay(250);
    digitalWrite(12, HIGH);
  }
}
